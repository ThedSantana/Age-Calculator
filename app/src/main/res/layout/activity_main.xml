<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="com.sofittech.agecalculator.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#fff"
        android:id="@+id/ed" />

    <Button
        android:id="@+id/btn_cal"
        android:layout_width="match_parent"
        android:text="Calculate"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.5"
            android:text="Your Age is : "
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="35dp"
            android:id="@+id/age"
            android:textStyle="bold"
            android:textColor="#ff0000"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="You have been living for"
        android:gravity="center"
        />


    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="In Months :"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/month"
            android:background="@drawable/back"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            />


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="In Days :"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/day"
            android:background="@drawable/back"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_weight="6"
            android:layout_height="40dp" />


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="In Hours :"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hour"
            android:background="@drawable/back"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="40dp" />


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="In Minutes :"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/min"
            android:background="@drawable/back"
            android:layout_width="0dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:layout_weight="6"
            android:layout_height="40dp" />


    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="In Seconds :"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sec"
            android:background="@drawable/back"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_height="40dp" />


    </LinearLayout>

</LinearLayout>
